# Deep Research Showcase - Environment Configuration
# Copy this file to .env and fill in your values

# ========================================
# Model Provider Configuration
# ========================================

# OpenAI API Key (for baseline comparison)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Alternative model provider (optional)
# Supports any OpenAI-compatible endpoint
ALT_MODEL_BASE_URL=
ALT_MODEL_API_KEY=

# Default model to use
DEFAULT_MODEL=gpt-4o-mini

# ========================================
# Server Configuration  
# ========================================

# Backend server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001

# Frontend dev server  
FRONTEND_PORT=3000

# ========================================
# Storage Configuration
# ========================================

# Path for run artifacts, traces, and evidence
DATA_DIR=./data

# SQLite database path
DATABASE_URL=sqlite+aiosqlite:///./data/deep_research.db

# ========================================
# Agent Configuration
# ========================================

# Maximum steps for ReAct loop
MAX_AGENT_STEPS=50

# Maximum context window tokens
MAX_CONTEXT_TOKENS=128000

# Enable disk-backed context management
ENABLE_DISK_CONTEXT=true

# ========================================
# Security Configuration
# ========================================

# Sandbox mode for shell tool (recommended: true)
SHELL_SANDBOX_MODE=true

# Allowed shell commands (comma-separated)
SHELL_ALLOWED_COMMANDS=python,node,grep,cat,head,tail,wc,curl

# ========================================
# Logging Configuration
# ========================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# ========================================
# Feature Flags (Ablation Controls)
# ========================================

# Enable reflection/cross-validation
ENABLE_REFLECTION=true

# Enable authority-aware ranking
ENABLE_AUTHORITY_RANKING=true

# Enable todo state tracking
ENABLE_TODO_STATE=true

# Enable patch-based editing
ENABLE_PATCH_EDITING=true
